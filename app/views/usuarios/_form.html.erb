<%= simple_form_for @usuario, wrapper: :vertical_form  do |f| %>
	<%= f.input :email, input_html: { autocomplete: "off", autofocus: "on" } %>
 	<%= f.input :password, input_html: { autocomplete: "off" } %>
 	<%= f.input :password_confirmation, input_html: { autocomplete: "off" } %>
  	<%= f.input :primerNombre, input_html: { autocomplete: "off" } %>
  	<%= f.input :segundoNombre, input_html: { autocomplete: "off" } %>
 	<%= f.input :primerApellido, input_html: { autocomplete: "off" } %>
 	<%= f.association :roles, as: :check_boxes %>
  	<%= f.button :submit %>
<% end %>