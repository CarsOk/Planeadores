<div class="formularioLogin">
  <h2>Ingresar</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <label class="email optional" for="usuario_email"><i class="fas fa-envelope"></i> Email</label>
      <input autocomplete="email" class="string email optional" autofocus="autofocus" type="email" value="" name="usuario[email]" id="usuario_email" />

      <label class="password optional" for="usuario_password"><i class="fas fa-lock-open"></i> Password</label>
      <input autocomplete="current-password" class="password optional" type="password" name="usuario[password]" id="usuario_password" />

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <button><i class="fas fa-sign-in-alt"></i></button>
    </div>
  <% end %>

  <div class="enlaces">
    <%= render "devise/shared/links" %>
  </div>
</div>
