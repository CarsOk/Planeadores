<%= simple_form_for [@agente, @transaccion], wrapper: :vertical_form do |f| %>
	<%= f.input :valor %>
	<%= f.input :medio_de_pago, priority: [ "Daviplata" ], collection: ["Daviplata", "SuperGiros", "Bancolombia", "Efecty"], include_blank: false, include_hidden: false %>
	<%= f.input :fecha_de_pago %>
	<div class="botones">
		<%= f.button :submit, class: "btn btn-info" %>
		<div class="btn btn-secondary">
			<i class="fas fa-undo-alt"></i> <%= link_to 'Regresar', agente_transacciones_path(@agente) %>
		</div>
	</div>
<% end %>